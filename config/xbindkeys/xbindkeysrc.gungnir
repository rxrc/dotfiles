# Control backlight.
"xbacklight -dec 10"
  m:0x0 + c:72
  XF86MonBrightnessDown

"xbacklight -inc 10"
  m:0x0 + c:73
  XF86MonBrightnessUp

# Control keyboard backlight.
"sudo /usr/local/bin/chromeos-kbd_backlight --decrease"
  m:0x8 + c:72
  XF86MonBrightnessDown

"sudo /usr/local/bin/chromeos-kbd_backlight --increase"
  m:0x8 + c:73
  XF86MonBrightnessUp

# Media keys.
"sleep 0.2 && xdotool key XF86AudioPrev"
  m:0x8 + c:67
  Alt + XF86Back

"sleep 0.2 && xdotool key XF86AudioNext"
  m:0x8 + c:68
  Alt + XF86Foward

"sleep 0.2 && xdotool key XF86AudioPlay"
  m:0x8 + c:69
  Alt + XF86Refresh

# Toggle touchpad.
"touchpad-toggle"
  m:0x0 + c:70
  F11

# Previous and next tab.
"sleep 0.2 && xdotool key --clearmodifiers Ctrl+Shift+Tab"
  m:0x50 + c:67
  Mod2+Mod4 + XF86Back

"sleep 0.2 && xdotool key --clearmodifiers ctrl+Tab"
  m:0x50 + c:68
  Mod2+Mod4 + XF86Foward

# Toggle speakers and headphones.
"chromeos-sound-output-toggle"
  m:0x8 + c:74
  Alt + XF86AudioMute

# Bind power off.
"sudo /usr/bin/poweroff"
  m:0x8 + c:124
  Alt + XF86PowerOff

# Bind screen locker.
"xscreensaver-command --lock"
  m:0x8 + c:49
  Alt + grave

# Bind delete.
"xdotool getwindowfocus key Delete"
  m:0x18 + c:22
  Alt+Mod2 + BackSpace
